<dialog
  id="cart-dialog"
  class="border-light bg-dark-2 text-light backdrop:bg-dark-2 fixed bottom-0 right-0 top-0 my-0 ml-auto mr-0 min-h-screen min-w-80 border-l border-opacity-25 bg-none py-0 backdrop:bg-opacity-50"
>
  <div class="relative h-screen w-full px-8 py-16">
    <h3 class="mb-4 text-2xl font-medium tracking-tighter">Carrito</h3>
    <Icon
      name="close"
      class="absolute right-8 top-16 size-6 cursor-pointer opacity-15 hover:opacity-100"
      id="closeCartIcon"
    />
