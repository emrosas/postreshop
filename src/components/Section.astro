---
type Props = {
  tag?: "section" | "header";
};

const { tag = "section" } = Astro.props;
---

{
  tag === "header" ? (
    <header class="~px-4/16 mx-auto max-w-7xl py-4">
      <slot />
    </header>
  ) : (
    <section class="~px-4/16 mx-auto max-w-7xl py-4">
      <slot />
    </section>
  )
}
